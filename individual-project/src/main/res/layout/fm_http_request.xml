<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sv_http_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF5F7"
            android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_main_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/et_box_bg"
            android:hint="输入主页"
            android:padding="10dp"
            android:textColor="#666666"
            android:textColorHint="#CCCCCC"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/et_box_bg"
            android:hint="输入网址"
            android:padding="10dp"
            android:textColor="#666666"
            android:textColorHint="#CCCCCC"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/ll_params"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/btn_add_params"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="添加参数"
                android:textColor="#FFF"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_request_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="清空"
                android:textColor="#FFF"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:enabled="false"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="请求"
                android:textColor="#FFF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_request_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#EDEDED"
            android:padding="10dp"
            android:textColor="#666666"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_out_return_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/et_box_bg"
            android:padding="10dp"
            android:textColor="#666666"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>