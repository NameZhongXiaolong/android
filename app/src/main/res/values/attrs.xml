<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <attr name="titleText" format="string" />
    <attr name="dividerHeight" format="dimension" />
    <attr name="dividerColor" format="color" />
    <attr name="contentColor" format="color" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="navigationIcon" format="reference" />
    <attr name="setStatusBarPadding" format="boolean" />
    <attr name="titleGravity" format="integer" >
        <flag name="right" value="1" />
        <flag name="left" value="2" />
        <flag name="center" value="3" />
    </attr>

    <!--头部导航栏自定义-->
    <declare-styleable name="ActionBarView">
        <!--标题-->
        <attr name="titleText" />
        <!--分割线高度-->
        <attr name="dividerHeight" />
        <!--分割线颜色-->
        <attr name="dividerColor" />
        <!--内容颜色,包括标题和图标-->
        <attr name="contentColor" />
        <!--标题字号-->
        <attr name="titleTextSize" />
        <!--左边按钮-->
        <attr name="navigationIcon" />
        <!--标题的位置,左中右-->
        <attr name="titleGravity" />
        <!--是否设置状态栏高度的topPadding,由于使用的是全屏的主题-->
        <attr name="setStatusBarPadding" />
    </declare-styleable>
</resources>
