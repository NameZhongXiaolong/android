<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <com.github.application.view.ActionBarView
        android:id="@id/action_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="设置" />

    <LinearLayout
        android:id="@id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/linear_layout_divider_1"
        android:orientation="vertical"
        android:showDividers="middle">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/def_pressed"
            android:drawableStart="@drawable/ic_setting_theme"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|start"
            android:minHeight="45dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="主题"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/def_pressed"
            android:drawableStart="@drawable/ic_setting_fingerprint"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|start"
            android:minHeight="45dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="指纹加密"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/def_pressed"
            android:drawableStart="@drawable/ic_setting_page"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|start"
            android:minHeight="45dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="启动页"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>